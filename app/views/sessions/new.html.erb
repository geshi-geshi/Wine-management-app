<% provide(:title, "login") %>
<div class="jumbotron jumbotron-extend">
  <div class="container-fluid">
    <h1>ログイン</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <%= f.label :email, class: "label-login" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, class: "label-login" %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
        <% end %>

         <!-- Twitterでログイン -->
        <%= link_to 'Twitterでログイン', '/auth/twitter' %>

        <!-- 簡単ログイン（管理権限） -->
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          <%= f.hidden_field :email ,value: "testadmin@sample.com" %>
          <%= f.hidden_field :password ,value: "testpassword" %>
          <%= f.submit "簡単ログイン（管理権限）", class: "btn btn-danger" %>
        <% end %>

        <!-- 簡単ログイン（一般権限） -->
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          <%= f.hidden_field :email ,value: "test@sample.com" %>
          <%= f.hidden_field :password ,value: "testpassword" %>
          <%= f.submit "簡単ログイン（一般権限）", class: "btn btn-warning mb-2" %>
        <% end %>
        <p>
          ユーザー登録がまだの場合は<%= link_to "こちら", signup_path %>
        </p>
      </div>
    </div>
  </div>
</div>
