<div class="btn-wine-area">
  <% if logged_in? %>
    <%= link_to signup_path, class: "btn btn-primary btn-wine-new" do %>
      <i class="material-icons">add</i>
      <span class="btn-text">ユーザー新規登録</span>
    <% end %>
  <% end %>
  <a class="btn btn-primary btn-wine-search" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    <i class="material-icons">search</i>
    <span class="btn-text">検索する</span>
  </a> 
</div>

<div class="collapse" id="collapseExample">
  <div class="col-md-8 col-md-offset-2 search-form">
    <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder: "ユーザー名で検索", class: "form-control" %>
      <%= f.search_field :email_cont, placeholder: "メールアドレスで検索", class: "form-control" %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>