<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Wine Management App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path, class: "header_main" do %>
            <i class="material-icons">arrow_upward</i>
            <span>TOP</span>
          <% end %>
        </li>
        <li>
          <%= link_to wines_path, class: "header_main" do %>
            <i class="material-icons">local_bar</i>
            <span>ワイン一覧</span>
          <% end %>
        </li>
        <% if logged_in? %>

          <!-- 管理者のみ表示 -->
          <% if current_user.admin? %>
          <li>
            <%= link_to users_path, class: "header_main" do %>
              <i class="material-icons">people_alt</i>
              <span>ユーザ一覧</span>
            <% end %>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header_main" data-toggle="dropdown">
            <i class="material-icons ">account_circle</i>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
            <% if !current_user.admin? %>
                                          <!-- edit_user_path で現在ログイン中のユーザーIDをリソースに当てはめる-->
              <li><%= link_to "マイページ", edit_user_path(current_user), class: "dropdown-menu_text" %></li>
              <li class="divider"></li>
            <% end %>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-menu_text" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path, class: "header_main" do %>
              <i class="material-icons">input</i>
              <span>ログイン</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
