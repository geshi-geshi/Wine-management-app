          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "アルゼンチン", unchecked_value = "" %>アルゼンチン
        </div>
        <div class="checkbox-inline">
          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "南アフリカ", unchecked_value = "" %>南アフリカ
        </div>
        <div class="checkbox-inline">
          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "オーストラリア", unchecked_value = "" %>オーストラリア
        </div>
        <div class="checkbox-inline">
          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "ニュージーランド", unchecked_value = "" %>ニュージーランド
        </div>
        <div class="checkbox-inline">
          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "中国", unchecked_value = "" %>中国
        </div>
        <div class="checkbox-inline">
          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "日本", unchecked_value = "" %>日本
        </div>
        <div class="checkbox-inline">
          <%= f.check_box :country_eq_any, {multiple: true}, checked_value = "その他", unchecked_value = "" %>その他
        </div>
      </div>
      <br/>
      
      <%= f.select :body_cont, ['ライトボディ', 'ミディアムボディ', 'フルボディ'], {include_blank: 'ボディで検索'}, class: 'form-control' %>
      <br/>
      <!-- eqはイコール -->
      <%= f.number_field :production_year_eq, placeholder: "生産年で検索", class: "form-control" %>

      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

